<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/welcome_card"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/big_margin_10"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="@dimen/small_margin_2"
            android:layout_marginBottom="@dimen/small_margin_2"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/default_card_radius_5"
            app:cardBackgroundColor="@color/default_text_color_blue_cyan">

            <RelativeLayout
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/welcome_text"
                    android:text="@string/welcome__"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/title_text_size_big_20"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/big_margin_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/name"
                    android:text=" Test"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/title_text_size_big_20"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/welcome_text"
                    android:layout_marginStart="@dimen/big_margin_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/exclam"
                    android:text=" !!!"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/title_text_size_big_20"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/name"
                    android:layout_marginStart="@dimen/big_margin_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/name_indicator"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_blue_view"
            android:layout_marginTop="@dimen/big_margin_10"
            android:layout_marginBottom="@dimen/small_margin_2"
            android:text="T"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textAlignment="center"
            android:textStyle="bold" />

    </RelativeLayout>
</layout>